    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Test with GCC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/core_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Skip std",
                    "text": "-interpreter-exec console \"skip -rfu ^std::\"" // Skip everything in std
                }
            ],
            "preLaunchTask": "Build with Makefile",
            "miDebuggerPath": "/usr/bin/gdb"
        },

        {
            "name": "Debug Test with LLDB",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/core_test",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {},
            "preLaunchTask": "Build with Makefile",
        },

        {
            "name": "Debug Sandbox with LLDB",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/sandbox",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {},
            "preLaunchTask": "Build with Makefile",
        },
        
        {
            "name": "Debug Examples with Makefile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/examples/build/main",
            "args": [ "-ex", "1" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Skip std",
                    "text": "-interpreter-exec console \"skip -rfu ^std::\"" // Skip everything in std
                }
            ],
            "preLaunchTask": "Build examples with Makefile",
            "miDebuggerPath": "/usr/bin/gdb"
        },
    ]
}
